---
import "@/styles/code.css";
import "@/styles/global.css";
import "@/styles/swup.css";
import "@/styles/typography.css";

import Footer from "@/components/Footer.astro";
import Head from "@/components/Head.astro";
import Header from "@/components/Header.astro";
import LoadFont from "@/components/util/LoadFont.astro";
import { SITE } from "@/consts";
import { cn } from "@/lib/utils";

interface Props {
  class?: string;
}

const { class: className } = Astro.props;
---

<!doctype html>
<html class="bg-background text-foreground" lang={SITE.locale}>
  <Head>
    <slot name="head" />

    <LoadFont />
  </Head>
  <body>
    <div class="flex h-fit min-h-screen flex-col gap-y-6 font-sans">
      <div
        id="header"
        class="bg-background/50 sticky top-0 z-50 divide-y backdrop-blur-sm transition-transform duration-300 ease-in-out xl:divide-none"
      >
        <Header />
        <div id="mobile-header" class="divide-y">
          <slot name="subposts-navigation" />
          <slot name="table-of-contents" />
        </div>
      </div>
      <main class="grow">
        <div class={cn("mx-auto flex grow flex-col gap-y-6 px-4", className)}>
          <slot />
        </div>
      </main>
      <Footer />
    </div>
  </body>
</html>
