---
import Link from "@/components/Link.astro";
import ThemeToggle from "@/components/theme/ThemeToggle.astro";
import MobileMenu from "@/components/ui/mobile-menu";
import { NAV_LINKS, SITE } from "@/consts";
import { Image } from "astro:assets";
import logo from "../../public/static/logo.svg";
---

<header transition:persist>
  <div
    class="mx-auto flex max-w-3xl items-center justify-between gap-4 px-4 py-3"
  >
    <Link
      href="/"
      class="focus-visible:border-ring focus-visible:ring-ring/50 -mx-3 -my-2 flex shrink-0 items-center justify-center gap-3 rounded-sm px-3 py-2 outline-none focus-visible:ring-[3px]"
    >
      <Image src={logo} alt="Logo" class="size-5 sm:size-6" />
      <span class="hidden h-full text-lg font-medium min-[300px]:block"
        >{SITE.title}</span
      >
    </Link>
    <div class="flex items-center gap-2 sm:gap-4">
      <nav class="hidden items-center gap-4 text-sm sm:flex sm:gap-4">
        {
          NAV_LINKS.map((item) => (
            <Link
              href={item.href}
              class="text-foreground/60 hover:text-foreground/80 focus-visible:border-ring focus-visible:ring-ring/50 rounded-sm px-2 py-1 capitalize transition-colors outline-none focus-visible:ring-[3px]"
            >
              {item.label}
            </Link>
          ))
        }
      </nav>
      <MobileMenu client:load transition:persist />
      <ThemeToggle transition:persist />
    </div>
  </div>
</header>
